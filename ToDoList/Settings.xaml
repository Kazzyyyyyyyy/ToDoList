<Page x:Class="ToDoList.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <!--MainGrid-->
    <Grid Name="SettingsWindowGrid" Width="800" Height="450" VerticalAlignment="Center" HorizontalAlignment="Center">


        <!--ColumnAndRows-->
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="266" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="GUIs_saveAndGoBackButton" Click="GUIs_saveAndGoBackButton_Click" 
                Height="30" Margin="25,40,76,80"
                Content="SAVE AND GO BACK" />

        <!--Segments-->
        <TextBlock Text="Appearance" 
                   Height="40" Width="150" FontSize="25" Margin="25,90,91,20" 
                   Background="#1E1E1E" />

        <TextBlock Text="File Management" 
                   Grid.Column="1"  Height="40" FontSize="25" Margin="43,90,292,20" 
                   Background="#1E1E1E" />

        <!--FontSize-->
        <TextBox x:Name="GUIs_fontSizeTextBox" 
                 Grid.Row="1" Height="20" Width="20" Margin="180,23,66,257" />

        <TextBlock Text="Fontsize:" 
                   Grid.Row="1" Height="25" Width="60" FontSize="15" Margin="24,20,182,255" 
                   Background="#1E1E1E" />

        <Button x:Name="GUIs_fontSizePlusButton" Content="+" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                Grid.Row="1" Height="20" Width="20" Margin="209,23,37,257" 
                Click="GUIs_fontSizePlusButton_Click"/>

        <Button x:Name="GUIs_fontSizeMinusButton" Content="-" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                Grid.Row="1" Height="20" Width="20" Margin="236,23,10,257" 
                Click="GUIs_fontSizeMinusButton_Click"/>


        <!--FileManagement-->
        <TextBlock Text="SettingsFile:" Background="#1E1E1E" FontSize="15"
                   Grid.Column="1" Grid.Row="1" Height="20" Margin="42,60,416,220" />

        <Button Name="GUIs_openSettingsFileButton" Content="Open File" Click="GUIs_openSettingsFileButton_Click"
                Grid.Column="1" Grid.Row="1" Margin="302,59,137,219" />

        <Button Name="GUIs_copySettingsFilePathButton" Content="Copy Path" Click="GUIs_copySettingsFilePathButton_Click"
         Grid.Column="1" Grid.Row="1" Margin="197,59,249,219" />

        <ComboBox Name="GUIs_openSettingsFileWithAppComboBox" 
          Grid.Row="1" Grid.Column="1" Margin="412,59,22,219"
          HorizontalContentAlignment="Center" >
            <ComboBoxItem Content="TXT editor" />
            <ComboBoxItem Content="Notepad++" />
        </ComboBox>

        <TextBlock Text="DBFilePath:" Background="#1E1E1E" FontSize="15"
                   Grid.Column="1" Grid.Row="1" Height="20" Margin="43,23,148,257" />

        <TextBox Name="GUIs_filePathTextBox" 
                   Grid.Column="1" Grid.Row="1" Height="22.5" Margin="197,22,22,256" />


        <TextBlock Text="SortOutCheckedTasksProfileName:" 
                   Grid.Column="1" Grid.Row="1" Height="25" FontSize="15" Margin="43,95,261,180"/>

        <TextBox Name="GUIs_sortOutCheckedTasksProfileNameTextBox"
                 Grid.Column="1" Grid.Row="1" Height="22.5" Margin="302,97,22,180"/>

        <TextBlock Text="SortOutCheckedTasks:" Grid.Column="1" Grid.Row="1"  Height="25" FontSize="15" Margin="43,133,342,142"/>

        <ComboBox Name="GUIs_sortOutCheckedTasks" 
                  Grid.Row="1" Grid.Column="1" Width="75" Margin="437,134,22,144" 
                  HorizontalContentAlignment="Center" >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

        <!--FontStyle-->
        <TextBlock Text="FontStyle:" FontSize="15"
                   Grid.Row="1" Height="20" Margin="25,60,175,220"
                   Background="#1E1E1E" />

        <ComboBox Name="GUIs_fontStyleComboBox" 
                  Grid.Row="1" Width="125" Margin="131,59,10,219" 
                  SelectionChanged="GUIs_fontStyleComboBox_SelectionChanged"
                  HorizontalContentAlignment="Center" >
            <ComboBox.ItemsSource>
                <Binding Source="{x:Static Fonts.SystemFontFamilies}" />
            </ComboBox.ItemsSource>
        </ComboBox>

        <!--ResetGUIAfterAction-->
        <TextBlock Text="ResetGUIAfterAction:" 
           Grid.Row="1" Height="25" FontSize="15" Margin="25,95,100,180" 
           Background="#1E1E1E" />

        <ComboBox Name="GUIs_resetAllAfterActionComboBox" 
          Grid.Row="1" Width="75" Margin="181,97,10,181" 
          HorizontalContentAlignment="Center" >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>


        <!--SortCheckedTasksLow-->
        <TextBlock Text="SortCheckedTasksLow:" 
                   Grid.Row="1" Height="25" Width="150" FontSize="15" Margin="24,133,92,142" 
                   Background="#1E1E1E" />
        <ComboBox Name="GUIs_sortCheckedTasksLow" 
                  Grid.Row="1" Width="75" Margin="181,134,10,144" 
                  HorizontalContentAlignment="Center" >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

        <!--SaveTimerOnStop-->
        <TextBlock Text="SaveTimerOnStop:" Grid.Row="1" Height="25" Width="150" FontSize="15" Margin="24,68,92,0" 
                   Background="#1E1E1E" />

        <ComboBox Name="GUIs_saveTimerOnStop" 
                  Grid.Row="1" Width="75" Margin="181,172.5,10,105" 
                  HorizontalContentAlignment="Center" >
            <ComboBoxItem Content="True" />
            <ComboBoxItem Content="False" />
        </ComboBox>

    </Grid>
</Page>